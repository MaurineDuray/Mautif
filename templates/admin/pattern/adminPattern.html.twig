{% extends 'base.html.twig' %}

{% block title %}Admin - Patterns{% endblock %}

{% block body %}
    {% include "partials/intro.html.twig" %}
    <div class="slide fil dash">
        <h2>Bienvenue dans l'administration <i>{{app.user.pseudo}} !</i></h2>
         <a href={{path('admin')}}><button class="backButton">Retour au tableau de bord</button></a>
        <h1>Gestion des mautifs</h1>
         <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Vignette</th>
                        <th>Titre du motif</th>
                        <th>Auteur</th>
                        <th>Voir le profil</th>
                        {# <th>Date de cr√©ation</th> #}
                        
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for pattern in patterns %}
                        <tr>
                            <td>{{pattern.id}}</td>
                            <td><img class="vignette" src="../uploads/{{pattern.cover}}" alt=""></td>
                            <td>{{pattern.title}}</td>
                            <td>{{pattern.idUser.pseudo}}</td>
                            <td> 
                            <a href="{{path('user_profile',{'slug': pattern.idUser.slug })}}" class="btn-green"><i class="fa-solid fa-eye"></i></a>
                            </td>
                            {# <td>{{pattern.creationDate | date('d/m/Y')}}</td> #}
                            <td class="actions">
                                <a href="{{path('pattern_edit',{'slug': pattern.slug })}}" class="btn-yellow"><i class="fas fa-edit"></i></a>
                                <a href="{{path('admin_pattern_delete',{'slug': pattern.slug })}}" class="btn-red" ><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        
    </div>
   
{% endblock %}




 <div class="instax">
                <div class="btnactions">
                    <a href="{{path('pattern_img',{'slug': pattern.slug})}}" ><i class="fa-solid fa-image"></i></a>
                    <a href="{{path('pattern_edit',{'slug': pattern.slug})}}" ><i class="fas fa-edit"></i></a>
                    <a href="{{path('confirmdelete',{'slug': pattern.slug})}}" ><i class="fas fa-trash"></i></a>
                </div>
               <a href={{path('pattern_show',  {'slug':pattern.slug})}}><img src="/uploads/{{pattern.cover}}" alt="image de "></a>
                <div class="instaxContent">
                    <div class="instaxTitle">
                    <h6>Collection - {{pattern.title}}</h6>
                    <p><i>par {{pattern.idUser.pseudo}}</i></p>
                    </div>
                </div>

        {% if app.user %}
                        {% if pattern.likes | length==0 %}
                            <a href="{{path('like', {'id': pattern.id})}}" class="heart">
                                <div class="like">
                                    <i class="fa-regular fa-heart"></i>
                                </div>
                            </a>
                        {% else %}
                            {% for like in pattern.likes %}
                                {% if like.user.id == app.user.id%}
                                    <a href="{{path('unlike', {'id': like.id})}}" class="heart">
                                        <div class="like">
                                            <i class="fa-solid fa-heart"></i>
                                        </div>
                                    </a>
                                {% else %}
                                    <a href="{{path('like', {'id': pattern.id})}}" class="heart">
                                        <div class="like">
                                            <i class="fa-regular fa-heart"></i>
                                        </div>
                                    </a>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        
                    {% endif %}
                
</div>

{% block javascripts %}
    {{encore_entry_script_tags('like')}}
{% endblock %}
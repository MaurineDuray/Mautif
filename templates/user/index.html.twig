{% extends 'base.html.twig' %}

{% block title %}Profil de {{user.pseudo}}{% endblock %}

{% block body %}
    {% include "partials/intro.html.twig" %}
    <div class="slide fil">
        {% if user.email == app.user.email %}
            <h2>Votre profil</h2>
        {% else %}
             <h2> Profil de <i>{{user.pseudo}}</i></h2>
        {% endif %}

        {% if user.id == app.user.id %}
            <a href="#"><button>Modifier mes informations </button></a>
        {% endif %}
        
       
        <div class="profileContent">
            <div class="left">
                {% if user.avatar %}
                    <img id="avatar" src="../uploads/{{user.avatar}}" alt="">
                {% else %}
                    <img id="avatar" src="../images/director.png" alt="">
                {% endif %}
                
            </div>
            <div class="right">
                <h5>Pseudo</h5>
                <p>{{user.pseudo}}</p>
                <h5>Email</h5>
                <p>{{user.email}}</p>
                <h5>Introduction</h5>
                <p>{{user.introduction}}</p>
                
            </div>
        </div>

        <hr class="sep" >
        <div id="create">
            <h4>Créations récentes</h4>
             <div class="container">
                <div class="filContainer">
                    {% for pattern in patterns %}
                        {% if pattern.idUser.id == user.id %}
                            {% include "admin/partials/_accountinstax.html.twig" %}
                        {% endif %}
                    {% endfor %}
                    {% if patterns | length==[] %}
                        <p>Pas de créations à afficher</p>
                    {% endif %}
                </div> 
                {% if app.user.id == user.id %}
                    <a href="{{path('mypattern')}}">En voir plus</a>
                {% else %}
                     <a href="#">En voir plus</a>
                {% endif %}
                
                
             </div>
           
        </div>
        <hr class="sep" >
        <div id="favorites">
            <h4>Derniers likes </h4>
            <div class="container">
                <div class="filContainer">

                </div>
                <a href="#">En voir plus</a>
            </div>
        </div>
    </div>
{% endblock %}

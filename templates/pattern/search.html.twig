{% extends 'base.html.twig' %}

{% block title %}Patterns{% endblock %}

{% block body %}
    <div class="noContextMenu">
        {% include "partials/intro.html.twig" %}
    </div>

    <div class="slide fil">
        <h2>Bienvenue dans le patchwork !</h2>

        <div class="searchType">
            {{form_start(search)}}
            {{form_end(search)}}
        </div>

        <h3 style="text-align:center">Voici les résultats de votre recherche : {{criteria}}</h3>
        <a class="uplodBtn" href="{{path('patterns_index')}}" style="display:flex; justify-content:center; text-decoration: none"><button >Annuler la recherche</button></a>       
        {% if patterns is not empty %} 
            <div class="filContainer">
                {% for pattern in patterns %}
                    {% include "partials/_instax.html.twig" %}
                {% endfor %}
            </div>
        {% else %}
            
                <p style="width: 100%; text-align: center; margin-top: 50px">Il n'y a pas de résultat correspondant à votre recherche !</p>
            
        {% endif %}
            
      
        
    </div>

    
{% endblock %}


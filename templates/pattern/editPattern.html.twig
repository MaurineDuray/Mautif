{% extends 'base.html.twig' %}

{% block title %}Editition d'un motif{% endblock %}

{% block body %}
    
    {% include "partials/intro.html.twig" %}
    <div class="slide fil">
        <h2>Modification du motif</h2>
        
        {{form_start(myform)}}
        {{form_widget(myform.submit)}}

        <div class="addContainer">
            
            <div class="left">
                 {{form_row(myform.cover)}} 
            </div>
            <div class="right">
                {{form_row(myform.title)}}
                {{form_row(myform.theme)}}
                {{form_row(myform.dominantColor)}}
                {{form_row(myform.description)}}
                {{form_row(myform.license)}}
                {{form_end(myform)}}
            </div>
            
        </div>
        
        <hr class="sep">
        
        
       
    </div>
    
{% endblock %}


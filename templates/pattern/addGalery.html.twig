{% extends "base.html.twig" %}

{# Page du formulaire de l'ajout d'un véhicule au showroom (formulaire) #}
{% block title %}Ajout à la galerie {% endblock %}



{% block body %}
    {% include "./partials/intro.html.twig" %}
    <div class="slide fil ">
        <h1 style="margin-bottom: 50px; margin-top: 30px; text-align:center;">Ajout de ton résultat à la galerie</h1>
        <p style="text-align:center;"><b>Tu as fait une création avec ce motif: "{{pattern.title}}", poste ton résultat !</b></p>
       
            <img src="../uploads/{{pattern.cover}}" alt="" class="card-img img-fluid" style="width: 200px">
        
        <a href="{{path('patterns_index')}}"><button class="btn btn-warning m-3" style="margin-left:50%; transform: translateX(-50%)">
            <i class="fa-solid fa-arrow-left"></i> Retour au patchwork </button></a>
        {{form_start(myform)}}
            <div class="container" style="background-color:  rgba(255, 170, 22, 0.1); padding: 20px; border-radius: 20px;">
                <div>
                    
                    {{form_widget(myform)}}

                </div>
                <button type="submit" class="btn btn-warning mt-3 uploadBtn"><i class="fa-solid fa-check"></i> Ajouter ma photo</button>
            </div>
            
        {{form_end(myform)}}
    </div>
{% endblock %}



